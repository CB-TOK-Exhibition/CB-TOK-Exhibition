{
  "name": "functions",
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "build": "tsc",

    "serveOld": "npm run build && firebase emulators:start --only functions",
    "serveSmall": "firebase emulators:start --only functions",
    "serve": "npm run build -- --watch | firebase emulators:start --only functions",
    "serveDebug": "npm run build -- --watch | firebase emulators:start --only functions --inspect-functions",
    
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "12"
  },
  "main": "lib/index.js",
  "dependencies": {
    "algoliasearch": "^4.9.2",
    "basic-ftp": "^4.6.6",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "firebase-admin": "^9.9.0",
    "firebase-functions": "^3.14.1",
    "stream-buffers": "^3.0.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.10",
    "@types/stream-buffers": "^3.0.3",
    "@typescript-eslint/eslint-plugin": "^4.27.0",
    "@typescript-eslint/parser": "^4.27.0",
    "eslint": "^7.28.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.23.4",
    "firebase-functions-test": "^0.3.0",
    "typescript": "^4.3.2"
  },
  "private": true
}
